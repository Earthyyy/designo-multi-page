---
import { Image } from "astro:assets";


import AboutHeroDesktop from "@/assets/about/desktop/image-about-hero.jpg";

import AboutHeroTablet from "@/assets/about/tablet/image-about-hero.jpg";

import AboutHeroMobile from "@/assets/about/mobile/image-about-hero.jpg";
---


<div class="tablet:grid desktop:flex tablet:rounded-2xl overflow-hidden relative tablet:mb-[7.5rem] desktop:mb-40">
    <Image
        src={AboutHeroDesktop}
        alt={"Hero"}
        class="w-full hidden desktop:block desktop:h-[480px] desktop:w-[476px] desktop:object-cover"
    />

    <Image
        src={AboutHeroTablet}
        alt={"Hero"}
        class="w-full hidden tablet:block desktop:hidden"
    />

    <Image
        src={AboutHeroMobile}
        alt={"Hero"}
        class="w-full tablet:hidden"
    />


    <div class={"w-full px-6 min-h-[24.625rem] tablet:min-h-[20.375rem] desktop:min-h-[30rem] bg-primary-peach flex flex-col justify-center items-center  tablet:px-[3.625rem] tablet:gap-8 gap-6 desktop:order-[-1]  relative overflow-hidden desktop:items-start desktop:pl-24 desktop:pr-20"}>

